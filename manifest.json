{
  "manifest_version": 3,
  "name": "Markdown Link Format",
  "version": "0.0",

  "description": "サイトURL をMarkdown のLink Format で取得する",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["contextMenus", "activeTab", "scripting", "clipboardWrite"]
}
